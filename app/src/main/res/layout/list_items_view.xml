<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#992121"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/subjectCode"
        style="@style/listItemsStyle"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:hint="SubjectCode"
        android:textColor="#32FF00"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#992183"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/subjectName"
            style="@style/listItemsStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="SubjectName"
            android:textColor="#FFF200"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/marksDivision"
            style="@style/listItemsStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="MarksDivision"
            android:textColor="#E5BD24" />

    </LinearLayout>

    <TextView
        android:id="@+id/totalMarks"
        style="@style/listItemsStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#1A7C27"
        android:gravity="center_vertical"
        android:hint="TotalMarks"
        android:textColor="#00FFE9"
        android:textSize="15sp" />

</LinearLayout>